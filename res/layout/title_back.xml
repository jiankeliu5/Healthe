<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" >
	<TextView 
	    android:id="@+id/notice"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:singleLine="true"
	    android:ellipsize="marquee"
	    android:text="通知:暂时没有通知，如果有适当的通知会推送。暂时没有通知，如果有适当的通知会推送。暂时没有通知，如果有适当的通知会推送。"
	    android:textSize="10dp"
	    android:textColor="@color/white"
	    
	    />

	<TextView
	    android:id="@+id/title_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/back_index"
	    android:layout_alignBottom="@+id/back_index"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="2dp"
	    android:gravity="center"
	    android:text="@string/app_name"
	    android:textColor="#FFFFFF"
	    android:textSize="@dimen/button_textsize" />

	<Button
	    android:id="@+id/back_index"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/notice"
	    android:layout_margin="2dp"
	    android:background="@drawable/button_style"
	    android:gravity="center_horizontal"
	    android:padding="5dp"
	    android:text="智能健康"
	    android:textSize="@dimen/button_textsize" />

	<Button
	    android:id="@+id/back_back"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/title_title"
	    android:layout_alignBottom="@+id/title_title"
	    android:layout_alignParentLeft="true"
	    android:layout_margin="2dp"
	    android:background="@drawable/button_style"
	    android:gravity="center_horizontal"
	    android:padding="5dp"
	    android:text="  返 回  "
	    android:textSize="@dimen/button_textsize" />

</RelativeLayout>

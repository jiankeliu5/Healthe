<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ListPeopleActivity"
    android:id="@+id/activity_list_card" >

    <LinearLayout
        android:id="@+id/listcardbuttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/create_card_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="添加健康卡" />

        <Button
            android:id="@+id/login_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="更改用户" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listcardbuttons"
        android:layout_marginTop="7dp"
        android:divider="#CFCFCF"
        android:dividerHeight="2dp" >

    </ListView>

	<SlidingDrawer
	    android:id="@+id/slidingDrawer2"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:content="@+id/add_card_help"
	    android:handle="@+id/handle_btn" >

	    
		<ImageView
		    android:id="@+id/handle_btn"
		    android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button_style"
	        />
	    <LinearLayout
	        android:id="@+id/add_card_help"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="160dp"
	        android:background="#ACD6FF"
	        android:orientation="vertical" >

	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="添加健康卡"
	            android:textSize="20dp" />

	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="操作指南："
	            android:textSize="15dp" />

	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="1.要绑定健康卡，请选择添加健康卡；"
	            android:textSize="15dp" />

	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="2.选择绑定居民健康卡，请输入您的身份证号和密码（初始密码为888888）进行绑定；"
	            android:textSize="15dp" />

	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="3.选择绑定佛山健康卡，请输入您的身份证号和密码（初始密码为身份证后六位）进行绑定；"
	            android:textSize="15dp" />

	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="4.绑定完成后，页面上方会出现您的名字和健康卡类型，点击前面的方框，则表示选中此健康卡为默认健康卡，可进行预约挂号、查询等操作。"
	            android:textSize="15dp" />
	    </LinearLayout>

	</SlidingDrawer>

</RelativeLayout>
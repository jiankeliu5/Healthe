<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_black"
        android:orientation="vertical"
         >

        <ImageView
            android:id="@+id/doctor_detail_pictureurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/booking_doc"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/doctor_detail_booking_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/button_textsize"
                android:text="预约挂号" 
                android:background="@drawable/button_style"/>
			<TextView android:textSize="@dimen/detail_content_textsize"
				    android:id="@+id/doctor_detail_id"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:text="TextView"
				    android:visibility="invisible" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"  
                android:layout_margin="2dp">

                <TextView android:textSize="@dimen/detail_content_textsize"
                    android:id="@+id/doctor_detail_name_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="名称： " />

                <TextView android:textSize="@dimen/detail_content_textsize"
                    android:id="@+id/doctor_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="加载中...." />

				

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_margin="2dp">

                <TextView android:textSize="@dimen/detail_content_textsize"
                    android:id="@+id/doctor_detail_level_grade_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="级别： " />

                <TextView android:textSize="@dimen/detail_content_textsize"
                    android:id="@+id/doctor_detail_level_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="加载中...." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"  
                android:layout_margin="2dp">

                <TextView android:textSize="@dimen/detail_content_textsize"
                    android:id="@+id/doctor_detail_intro_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="简介： " />

                <TextView android:textSize="@dimen/detail_content_textsize"
                    android:id="@+id/doctor_detail_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="加载中...." />

                <Button
                    android:id="@+id/connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style"
                    android:textSize="@dimen/button_textsize"
                    android:text="  收 藏  " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:orientation="vertical"  
                android:background="#FFFFFF">
            </LinearLayout>

            <TextView android:textSize="@dimen/detail_content_textsize"
                android:id="@+id/doctor_detail_contact_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="排班信息：" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/doctor_detail_schedule_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

</ScrollView>